<form id = "post_form" action = "/profile" method = "POST">
  <!-- <input type = "text" name = "content" placeholder = "Comment in 140 characters or less" maxlength = "140"></input> -->
  <textarea name = "content" placeholder = "Type 140 characters or less" maxlength = "140"></textarea>
  <input type = "Submit" value = "Post"></input>
</form>


<h2 id = "posts_title">Your Posts:</h2>
<div class = "user_post">
  <% @posts.each do |post| %>
  <p class = "post_content">  
    <%= post.content %>
  </p>
  <p class = "post_timestamp">
  <!--   <%= post.post_date %> -->
      <%= Time.now.strftime("%b %-d, %Y  %l:%M%p") %>
  </p>
  <% end %>  
</div>
  

